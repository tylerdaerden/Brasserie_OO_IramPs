<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Brasserie.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Brasserie"
    xmlns:view="clr-namespace:Brasserie.View"
    Shell.FlyoutBehavior="Disabled"
    Title="Brasserie">
    <TabBar>

        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:View.MainPage}"
        Route="MainPage" 
        />
        
        <ShellContent
        Title="Staff Members"
        Route="StaffMembersPage"
        ContentTemplate="{DataTemplate view:StaffMembersPage}" 
        />




    </TabBar>
</Shell>
